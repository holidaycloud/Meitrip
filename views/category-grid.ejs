<%include header%>
<!-- Main Container Starts -->
<div id="main-container" class="container">
<div class="row">
<!-- Primary Content Starts -->
<div class="col-md-9">
<!-- Breadcrumb Starts -->
<ol class="breadcrumb">
    <li><a href="/">首页</a></li>
    <li class="active"><%=classify.name%></li>
</ol>
<!-- Breadcrumb Ends -->

<!-- Product Filter Starts -->
<div class="product-filter">
    <div class="row">
        <div class="col-md-4">
            <div class="display">
                <a href="/category-list/<%=classify._id%>" class="hidden-sm hidden-xs">
                    <i class="fa fa-th-list" title="List View"></i>
                </a>
                <a href="javascript:void(0);" class="active">
                    <i class="fa fa-th" title="Grid View"></i>
                </a>
            </div>
        </div>
        <!--<div class="col-md-2 text-right">-->
            <!--<label class="control-label">Sort</label>-->
        <!--</div>-->
        <!--<div class="col-md-3 text-right">-->
            <!--<select class="form-control">-->
                <!--<option value="default" selected="selected">Default</option>-->
                <!--<option value="NAZ">Name (A - Z)</option>-->
                <!--<option value="NZA">Name (Z - A)</option>-->
            <!--</select>-->
        <!--</div>-->
        <!--<div class="col-md-1 text-right">-->
            <!--<label class="control-label" for="input-limit">Show</label>-->
        <!--</div>-->
        <!--<div class="col-md-2 text-right">-->
            <!--<select id="input-limit" class="form-control">-->
                <!--<option value="1">1</option>-->
                <!--<option value="2">2</option>-->
                <!--<option value="3" selected="selected">3</option>-->
            <!--</select>-->
        <!--</div>-->
    </div>
</div>
<!-- Product Filter Ends -->
<!-- Product Grid Display Starts -->
<div class="row">
    <%product.products.forEach(function(p){%>
    <div class="col-md-4 col-sm-6">
        <div class="product-col">
            <div class="image">
                <a href="/product/<%=p._id%>">
                <img src="<%=p.images[0].url%>" alt="product" class="img-responsive" />
                </a>
            </div>
            <div class="caption">
                <h4><a href="/product/<%=p._id%>"><%=p.name%></a></h4>
                <div class="description">
                    <%=p.introduction.substr(0,35)+"..."%>
                </div>
                <div class="price">
                    <span class="price-new">￥<%=p.price%></span>
                </div>
                <!--<div class="cart-button button-group">-->
                    <!--<button type="button" class="btn btn-cart">-->
                        <!--购买-->
                        <!--<i class="fa fa-shopping-cart"></i>-->
                    <!--</button>-->
                <!--</div>-->
            </div>
        </div>
    </div>
    <%});%>
</div>
<!-- Product Grid Display Ends -->
    <!-- Pagination & Results Starts -->
    <div class="row">
        <!-- Pagination Starts -->
        <div class="col-sm-6 pagination-block">
            <ul class="pagination">
                <%if(page==0){%>
                <li><a href="javascript:void(0)">&laquo;</a></li>
                <%} else {%>
                <li><a href="/category/<%=classify._id%>?page=<%=page-1%>">&laquo;</a></li>
                <%}%>

                <%for(var i=1;i<=totalPage;i++){
                if(i==page+1){%>
                <li class="active"><a href="javascript:void(0)"><%=i%></a></li>
                <%} else {%>
                <li><a href="/category/<%=classify._id%>?page=<%=i-1%>"><%=i%></a></li>
                <%}}%>

                <%if(page+1==totalPage){%>
                <li><a href="javascript:void(0)">&raquo;</a></li>
                <%} else {%>
                <li><a href="/category/<%=classify._id%>?page=<%=page+1%>">&raquo;</a></li>
                <%}%>
            </ul>
        </div>
        <!-- Pagination Ends -->
        <!-- Results Starts -->
        <div class="col-sm-6 results">
            第 <%=page+1%> 页 共 <%=totalPage%> 页
        </div>
        <!-- Results Ends -->
    </div>
    <!-- Pagination & Results Ends -->
</div>
<!-- Primary Content Ends -->
<!-- Sidebar Starts -->
<div class="col-md-3">
    <!-- Categories Links Starts -->
    <h3 class="side-heading">产品分类</h3>
    <div class="list-group">
        <%domain.classify.forEach(function(c){%>
        <a href="/category/<%=c._id%>" class="list-group-item">
            <i class="fa fa-chevron-right"></i>
            <%=c.name%>
        </a>
        <%});%>
        <a href="/category/default" class="list-group-item">
            <i class="fa fa-chevron-right"></i>
            所有产品
        </a>
    </div>
    <!-- Categories Links Ends -->
    <!-- Bestsellers Links Starts -->
    <h3 class="side-heading">热销产品</h3>
    <div class="product-col">
        <div class="image">
            <img src="images/product-images/pimg1.jpg" alt="product" class="img-responsive" />
        </div>
        <div class="caption">
            <h4>
                <a href="product-full.html">Simply Organic Seeds</a>
            </h4>
            <div class="description">
                We are so lucky living in such a wonderful time. Our almost unlimited ...
            </div>
            <div class="price">
                <span class="price-new">$199.50</span>
                <span class="price-old">$249.50</span>
            </div>
            <div class="cart-button button-group">
                <button type="button" title="Wishlist" class="btn btn-wishlist">
                    <i class="fa fa-heart"></i>
                </button>
                <button type="button" title="Compare" class="btn btn-compare">
                    <i class="fa fa-bar-chart-o"></i>
                </button>
                <button type="button" class="btn btn-cart">
                    Add to cart
                    <i class="fa fa-shopping-cart"></i>
                </button>
            </div>
        </div>
    </div>
    <!-- Bestsellers Links Ends -->
</div>
<!-- Sidebar Ends -->
</div>
</div>
<!-- Main Container Ends -->
<%include footer%>