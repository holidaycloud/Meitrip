<%include header%>
<!-- Main Container Starts -->
<div id="main-container" class="container">
<div class="row">
<!-- Primary Content Starts -->
<div class="col-md-9">
    <!-- Breadcrumb Starts -->
    <ol class="breadcrumb">
        <li><a href="/">首页</a></li>
        <li class="active"><%=classify.name%></li>
    </ol>
    <!-- Breadcrumb Ends -->

    <!-- Product Filter Starts -->
    <div class="product-filter">
        <div class="row">
            <div class="col-md-4">
                <div class="display">
                    <a href="javascript:void(0)" class="active">
                        <i class="fa fa-th-list" title="List View"></i>
                    </a>
                    <a href="/category/<%=classify._id%>">
                        <i class="fa fa-th" title="Grid View"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Product Filter Ends -->
    <!-- Product List Display Starts -->
    <div class="row">
        <%product.products.forEach(function(p){%>
        <div class="col-xs-12">
            <div class="product-col list clearfix">
                <div class="image">
                    <a href="/product/<%=p._id%>">
                    <img src="<%=p.images[0].url%>" alt="product" class="img-responsive" style="width:230px;height: 180px;"/>
                    </a>
                </div>
                <div class="caption">
                    <h4><a href="/product/<%=p._id%>"><%=p.name%></a></h4>
                    <div class="description">
                        <%=p.introduction.substr(0,100)+"..."%>
                    </div>
                    <div class="price">
                        <span class="price-new">￥<%=p.price%></span>
                    </div>
                    <!--<div class="cart-button button-group">-->
                        <!--<button type="button" class="btn btn-cart">-->
                            <!--购买-->
                            <!--<i class="fa fa-shopping-cart"></i>-->
                        <!--</button>-->
                    <!--</div>-->
                </div>
            </div>
        </div>
        <%});%>
    </div>
    <!-- Product List Display Ends -->
    <!-- Pagination & Results Starts -->
    <div class="row">
        <!-- Pagination Starts -->
        <div class="col-sm-6 pagination-block">
            <ul class="pagination">
                <%if(page==0){%>
                <li><a href="javascript:void(0)">&laquo;</a></li>
                <%} else {%>
                <li><a href="/category-list/<%=classify._id%>?page=<%=page-1%>">&laquo;</a></li>
                <%}%>

                <%for(var i=1;i<=totalPage;i++){
                if(i==page+1){%>
                <li class="active"><a href="javascript:void(0)"><%=i%></a></li>
                <%} else {%>
                <li><a href="/category-list/<%=classify._id%>?page=<%=i-1%>"><%=i%></a></li>
                <%}}%>

                <%if(page+1==totalPage){%>
                <li><a href="javascript:void(0)">&raquo;</a></li>
                <%} else {%>
                <li><a href="/category-list/<%=classify._id%>?page=<%=page+1%>">&raquo;</a></li>
                <%}%>
            </ul>
        </div>
        <!-- Pagination Ends -->
        <!-- Results Starts -->
        <div class="col-sm-6 results">
            第 <%=page+1%> 页 共 <%=totalPage%> 页
        </div>
        <!-- Results Ends -->
    </div>
    <!-- Pagination & Results Ends -->
</div>
<!-- Primary Content Ends -->
<!-- Sidebar Starts -->
<div class="col-md-3">
