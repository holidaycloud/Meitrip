<%include header%>
<!-- Main Container Starts -->
<div id="main-container" class="container">
    <!-- Breadcrumb Starts -->
    <ol class="breadcrumb">
        <li><a href="/">首页</a></li>
        <li class="active">新闻资讯</li>
    </ol>
    <!-- Breadcrumb Ends -->

    <!-- Registration Section Starts -->
    <section>
        <%newses.forEach(function(news){%>
        <div class="row news-area">
            <div class="col-sm-10">
                <a href="/newsDetail/<%=news._id%>" class="btn btn-link"><%=news.title%></a>
            </div>
            <div class="col-sm-2">
                <%=new Date(news.createDate).Format('yyyy-MM-dd hh:mm:ss')%>
            </div>
        </div>
        <%});%>
        <!-- Pagination & Results Starts -->
        <div class="row">
            <!-- Pagination Starts -->
            <div class="col-sm-6 pagination-block">
                <ul class="pagination">
                    <%if(page==0){%>
                    <li><a href="javascript:void(0)">&laquo;</a></li>
                    <%} else {%>
                    <li><a href="/news?page=<%=page-1%>">&laquo;</a></li>
                    <%}%>

                    <%for(var i=1;i<=totalPage;i++){
                    if(i==page+1){%>
                    <li class="active"><a href="javascript:void(0)"><%=i%></a></li>
                    <%} else {%>
                    <li><a href="/news?page=<%=i-1%>"><%=i%></a></li>
                    <%}}%>

                    <%if(page+1==totalPage){%>
                    <li><a href="javascript:void(0)">&raquo;</a></li>
                    <%} else {%>
                    <li><a href="/news?page=<%=page+1%>">&raquo;</a></li>
                    <%}%>
                </ul>
            </div>
            <!-- Pagination Ends -->
            <!-- Results Starts -->
            <div class="col-sm-6 results">
                第 <%=page+1%> 页 共 <%=totalPage%> 页
            </div>
            <!-- Results Ends -->
        </div>
        <!-- Pagination & Results Ends -->
    </section>
    <!-- Registration Section Ends -->
</div>
<!-- Main Container Ends -->

<%include footer%>
