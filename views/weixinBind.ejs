<%include header%>
<!-- Main Container Starts -->
<div id="main-container" class="container">
    <!-- Breadcrumb Starts -->
    <ol class="breadcrumb">
        <li><a href="/">首页</a></li>
        <li class="active">微信绑定</li>
    </ol>
    <!-- Breadcrumb Ends -->
    <!-- Main Heading Starts -->
    <h2 class="main-heading text-center">
        微信绑定
    </h2>
    <!-- Main Heading Ends -->
    <!-- Login Form Section Starts -->
    <section class="login-area">
        <div class="row">
            <div class="col-sm-12">
                <!-- Login Panel Starts -->
                <div class="panel panel-smart">
                    <div class="panel-heading">
                        <h3 class="panel-title">微信绑定</h3>
                    </div>
                    <div class="panel-body">
                        <p>
                            请输入手机和密码
                        </p>
                        <!-- Login Form Starts -->
                        <form class="form-form-horizontal" role="form" action="/weixinBind" method="post" id="loginForm">
                            <input type="hidden" name="openID" value="<%=openID?openID:''%>" />
                            <div class="form-group">
                                <label class="sr-only" for="mobile">手机号</label>
                                <input type="text" class="form-control" id="mobile" name="mobile" placeholder="手机号">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="passwd">密码</label>
                                <input type="password" class="form-control" id="passwd" name="passwd" placeholder="密码">
                            </div>
                            <div class="form-group">
                                <span class="text-danger lgn_msg"><%=lgn_msg%></span>
                            </div>
                            <button type="submit" class="btn btn-warning">
                                绑定
                            </button>
                        </form>
                        <!-- Login Form Ends -->
                    </div>
                </div>
                <!-- Login Panel Ends -->
            </div>
        </div>
    </section>
    <!-- Login Form Section Ends -->
</div>
<!-- Main Container Ends -->
<%include footer%>
<script>
    $(function(){
        $('#loginForm').submit(function(event){
            $("#passwd").val(faultylabs.MD5($("#passwd").val()));
        });
    });
</script>